<div class="container">
  <div class="carousel-name">
    <div class="carousel-description mb-4">
      <%= @device.name %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row mb-4">
    <div class="col-sm-6">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img height="400" width="400" src="https://images.unsplash.com/photo-1492044715545-15ddedd84e5e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img height="400" width="400" src="https://images.unsplash.com/photo-1605901309584-818e25960a8f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2078&q=80" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img height="400" width="400" src="https://images.unsplash.com/photo-1531594896955-305cf81269f1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" class="d-block w-100" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="container py-3">
        <div class="row">
          <div class="cardshow col-md-8" style="width: 30rem;">
            <div class="card-header">
              Features
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"> <strong>Description :</strong> <%= @device.description %></li>
              <li class="list-group-item"> <strong>Price :</strong> <%= @device.price %>â‚¬ per day</li>
           </ul>
          </div>
          <div class="card-booking col-md-4">
          <%= simple_form_for [@device, @rent] do |f|%>
            <%= f.input :date_begin, as: :string, required: false, input_html: {class: "datepicker"}%>
            <%= f.input :date_end, as: :string, required: false, input_html: {class: "datepicker"} %>
            <div class="d-flex justify-content-between mt-3 col border-top">
             <p><strong>Total amount </strong></p>
             <p><strong>XX Euros</strong></p>
            </div>
            <%= f.submit :Submit, class: 'btn btn-success' %>
          <% end %>
        </div>
        <div class="col-md-8">
          <h3>Your request for this <%= @device.name %></h3>
          <% @device.rents.each do |rent| %>
            <% if rent.user_id == current_user.id %>
              <div >
                <%= rent.date_begin %> | <%= rent.date_end %> |
                <% if rent.status == true %>
                 <p> accepted ! </p>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
